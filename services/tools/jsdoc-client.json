{
    "plugins": [
        "plugins/markdown"
    ],
    "recurseDepth": 10,
    "source": {
        "include": ["./public/src/"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "systemName": "ATON 3.0 API",
        "systemLogo": "./public/res/logo-inv-40x40.png",
        "systemSummary": "ATON is a framework to create Web3D apps (presenters, applied games, tools, etc.) interacting with CH objects and 3D scenes on the Web. It adopts a 'develop once, deploy everywhere' approach, without requiring any installation for final users, with its front-end automatically adapting to the device (mobile, desktop/kiosk or immersive VR).",
        "search": true,
        "outputSourceFiles": false,
        "outputSourcePath": false
    },

    "opts": {
        "destination": "./public/apidoc/client/",
        "template": "_prv/clean-jsdoc-theme",
        "recurse": true,
        "theme_opts": {
            "theme__": "dark",
            "title": "<div style='text-align:center'><img src='/res/aton-logo.png' style='width:100px;height:auto'><br>ATON 3.0 API</div>",
            "footer": "ATON 3.0 API",

            "include_css": ["./public/res/css/apidoc.css"],

            "menu":[
                {
                    "title": "Official website",
                    "link": "http://osiris.itabc.cnr.it/aton",
                    "target": "_blank"
                },
                {
                    "title": "GitHub",
                    "link": "https://github.com/phoenixbf/aton",
                    "target": "_blank"
                }
            ],
            "menuLocation": "up"
        }
    }
}